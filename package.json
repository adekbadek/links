{
  "name": "middleman-site",
  "version": "0.0.1",
  "description": "Starter for Middleman websites",
  "scripts": {
    "webpack": "webpack --watch",
    "middleman": "bundle exec middleman server",
    "dev": "concurrently --prefix \"{name}\" --names \"MM,WEBPACK\" -c \"bgBlue,bgGreen\" \"npm run middleman\" \"npm run webpack\"",
    "build": "rm -rf build && bundle exec middleman build",
    "bd": "npm run build && better-npm-run deploy"
  },
  "betterScripts": {
    "deploy": {
      "command": "rsync -avze 'ssh' --delete build/ ${SSH}:${SSH_DIR}",
      "env": {
        "SSH": "scylla",
        "SSH_DIR": "/home/scylla/adamboro.com/www/links"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adekbadek/middleman-site.git"
  },
  "author": "Adam Borowski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adekbadek/middleman-site/issues"
  },
  "homepage": "https://github.com/adekbadek/middleman-site#readme",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "better-npm-run": "0.0.15",
    "bricks.js": "^1.8.0",
    "concurrently": "^3.4.0",
    "css-loader": "^0.25.0",
    "dotenv": "^4.0.0",
    "indent-string": "^3.1.0",
    "inquirer": "^3.1.0",
    "progress-bar-webpack-plugin": "^1.9.0",
    "ramda": "^0.24.1",
    "some-sass-mixins": "^1.10.0",
    "style-loader": "^0.13.1",
    "twitter": "^1.7.0",
    "valid-url": "^1.0.9",
    "webpack": "^2.3.3",
    "yamljs": "^0.2.10"
  }
}
